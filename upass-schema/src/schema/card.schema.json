{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://upass.com.ua/schema/card",
    "title": "Card",
    "description": "A representation of upass customer card",
    "type": "object",
    "properties": {
        "id": {
            "title": "Card identifier",
            "description": "A unique identifier for upass system",
            "type": "string"
        },
        "os": {
            "title": "os",
            "description": "Customer device os",
            "enum": ["android", "ios"]
        },
        "createdAt": {
            "title": "Card creation date",
            "description": "Date when card was created",
            "type": "string",
            "format": "date-time"
        },
        "updatedAt": {
            "title": "Card last update date",
            "description": "Date when card was updated",
            "type": "string",
            "format": "date-time"
        },
        "logoAlt": {
            "title": "Logo alt",
            "description": "Card logo image html alt",
            "type": "string"
        },
        "holder": {
            "title": "Card holder information",
            "description": "Information about user personal data, user device data and etc.",
            "type": "object",
            "$ref": "#/card-holder/"
        },
        "balance": {
            "title": "Balance",
            "description": "Current customer's card balance",
            "type": "integer"
        },
        "cashbackValue": {
            "title": "Cashback value",
            "description": "Current customer's cashback value",
            "type": "integer"
        },
        "passCampaign": {
            "title": "Pass campaign",
            "description": "Campaign detail information to which pass has been associated",
            "type": "string"
        },
        "template": {
           "title": "Template",
           "description": "Basic card template, which contains information for card creation"
        },
        "assets": {
            "title": "Assets list",
            "description": "List of all assets which our cards uses ",
            "type": "array"
        },
        "barcodeType": {
            "title": "Barcode type",
            "description": "List of standard barcode types",
            "enum": ["qr","barcode"]
        }, 
        "details":{
            "title": "Details",
            "description": "Information on backside of pass, contains company mail, phone, address etc.",
            "type":"array"
        }
    }
}