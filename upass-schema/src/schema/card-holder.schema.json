{
    "$id": "http://upass.com.ua/schema/card-holder.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "A representation of a customer with all device data",
    "type": "object",
    "required": ["firstName", "lastName", "birthday", "phone"],
    "properties": {
        "firstName": {
            "title": "User first name",
            "description": "Represents user fist name",
            "type": "string"
        },
        "lastName": {
            "title": "User last name",
            "description": "Represents user last name",
            "type": "string"
        },
        "age": {
            "title": "User age",
            "description": "Represents user age",
            "type": "integer"
        },
        "birthday":{
            "title": "User birthday date",
            "description": "Represents birthday day",
            "type": "string",
            "format": "date"
        },
        "phone": {
            "title": "User phone",
            "description": "Represents user phone",
            "type": "string"
        },
        "email": {
            "title": "User email",
            "description": "Represents user email",
            "type": "string"
        },
        "device": {
            "title": "User device",
            "description": "Represents info about user device",
            "type": "object",
            "properties": {
                "os": {
                    "title": "User device os",
                    "description": "Represents user device os",
                    "enum": [
                        "android", 
                        "ios"
                    ]
                }
            }
        },
        "cards": {
            "title": "Customer cards list",
            "description": "",
            "type": "array"
        }
    }
}