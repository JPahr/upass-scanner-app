{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://upass.com.ua/schema/device",
    "title": "Device schema",
    "description": "This is a scheme which contains basic data about customer device: os, device name, etc",
    "type": "object",
    "properties": {
        "os": {
            "title": "Os",
            "description": "OS which customer is use",
            "enum": [
                "android", 
                "ios"
            ]
        },
        "manufacturer": {
            "title": "Company manufacturer",
            "description": "Describes which company produced customer device",
            "enum": [
                "Apple", "Samsung", "Xiaomi"
            ]
        },
        "model": {
            "title": "Model",
            "description": "Customer device model type",
            "type": "string"
        },
        "name": {
            "title": "Device name",
            "description": "Customer device name",
            "type": "string"
        },
        "cards": {
            "title": "Cards",
            "description": "Customer cards list",
            "type": "array"
        },
        "deviceId": {
            "title": "Device id",
            "description": "Unique device identifier",
            "type": "string"
        },
        "imei": {
            "title": "Imei",
            "description": "International Mobile Equipment Identity",
            "type": "string"
        }
    }
}